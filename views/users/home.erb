
<h2 class= centered>Here are your Users:</h2>

  <table>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <% @users.each do |u| %>
    <tr>
      <td><%= u.id %></td>
      <td><%= u.email %></td>
      <td><a href= "/users/#{<%= u.id %>}/edit"></a>Edit a User</td>
      <td><a href= "/users/#{<%= u.id %>}/delete"></a>Delete a User</td>
    </tr>
    <% end %>
  </table>
  
  <ul>
    <li><a href="/users/new">Add a User</a></li>
